<p id="notice"><%= notice %></p>

<h1><%= t('activerecord.models.coin.others') %></h1>

<table class="table table-ligth table-hover">
  <thead>
    <tr>
      <th> <%= t('activerecord.attributes.coin.description') %></th>
      <th><%= t('activerecord.attributes.coin.acronym') %></th>
      <th><%= t('activerecord.attributes.coin.url_image') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size: "25x25" %></td>
        <td><%= link_to t('links.show'), coin, type:"button", class:"btn btn-dark" %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin), type:"button", class:"btn btn-dark" %></td>
        <td><%= link_to t('links.destroy'), coin, method: :delete, data: { confirm: t('identify.confirm') }, type:"button", class:"btn btn-dark" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('links.new.coin'), new_coin_path, type:"button", class:"btn btn-dark" %>
