<p id="notice"><%= notice %></p>

<h1><%= t('activerecord.models.mining_type.others') %></h1>

<table class="table table-ligth table-hover">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.mining_type.description') %></th>
      <th><%= t('activerecord.attributes.mining_type.acronym') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('links.show'), mining_type, type:"button", class:"btn btn-dark" %></td>
        <td><%= link_to t('links.edit'), edit_mining_type_path(mining_type), type:"button", class:"btn btn-dark" %></td>
        <td><%= link_to t('links.destroy'), mining_type, method: :delete, data: { confirm: t('identify.confirm') }, type:"button", class:"btn btn-dark" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

